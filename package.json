{
  "name": "electron-template",
  "version": "0.1.0",
  "description": "A ready-to-use Electron + React + TypeScript template inspired by Heroic Games Launcher",
  "private": true,
  "main": "dist/main/index.js",
  "type": "module",
  "packageManager": "pnpm@10.9.0",
  "author": {
    "name": "lmmqxyx404"
  },
  "scripts": {
    "clean": "rimraf dist release",
    "dev": "electron-vite dev --watch",
    "build": "rimraf dist release && electron-vite build && electron-builder",
    "preview": "electron-vite preview",
    "start": "electron .",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "build": {
    "appId": "com.example.electrontemplate",
    "productName": "Electron Template",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist/main/index.js"
    },
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^5.17.1",
    "@mui/material": "^5.17.1",
    "i18next": "^22.5.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^12.3.1",
    "react-router-dom": "^6.30.0",
    "zustand": "^4.5.6"
  },
  "devDependencies": {
    "@types/node": "^22.15.18",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.8.3",
    "vite": "^5.4.10"
  }
}